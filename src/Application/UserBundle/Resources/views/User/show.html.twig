{% set btn_send = "Contactar" %}

{% set nav_user = 1 %}
{% extends "ApplicationAnunciosBundle::layout.html.twig" %}
{% set share_url = url('user_show', { 'id': entity.id, 'slug': entity.slug }) %}
{% set form_url = path('user_contact', { 'id': entity.id }) %}
{% block title entity.name %}

{% block sidebar %}


	<div style="background:#E3F0FD;padding:10px;margin-bottom:20px">
		<img src="{{ entity.getAvatar('bigger') }}" style="width:50px;height:50px;float:left;margin:0 15px 15px 0"/>
		<h1 style="margin-bottom:0;font-size:12px;">{{ entity.name }}</h1>
		{{ categories[ entity.categoryid ] }}<br>
		{{ entity.location }}<br>
		{% if entity.twitterurl %}
			<a href="https://twitter.com/{{ entity.twitterurl }}" class="twitter-follow-button" data-show-count="false" data-lang="es">Seguir a @{{ entity.twitterurl }}</a>
		{% endif %}		
	</div>


	<div style="background:#EEEEEE;padding:10px;margin-bottom:20px" id="widget_contact">
		<b>Contactar</b>
		<div style="border-top:1px #CDDAE3 solid;padding-bottom:10px;{% if entity.freelance == false %}opacity:0.3;{% endif %}"><img src="/bundles/applicationanuncios/images/check.png" align="absmiddle" width="13" height="13"/> Trabajos freelance</div>
		<div style="border-top:1px #CDDAE3 solid;padding-bottom:10px;{% if entity.unemployed == false %}opacity:0.3;{% endif %}"><img src="/bundles/applicationanuncios/images/check.png" align="absmiddle" width="13" height="13"/> Ofertas de empleo</div>	
		<div style="border-top:1px #CDDAE3 solid;padding-bottom:10px;{% if entity.searchteam == false %}opacity:0.3;{% endif %}"><img src="/bundles/applicationanuncios/images/check.png" align="absmiddle" width="13" height="13"/> Busca equipo</div>	
		{% include "ApplicationUserBundle:Form:contact.html.twig" %}
	</div>



	<div style="background:#EEEEEE;padding:10px;margin-bottom:20px" id="widget_contact">
	
		<b style="font-size:50px;display:block;padding:25px 0 5px 0;text-align:center;">
		{% if entity.votes %}
			{{ entity.votes }}
		{% else %}
			0
		{% endif %} 
		Recomendaciones
		</b>


		<a href="{{ path('user_comments', { 'id': entity.id }) }}" style="text-decoration:none;color:black;display:block;text-align:center">
	
	</div>



	{% if events %}
		<div style="background:#EEEEEE;padding:10px;margin-bottom:20px" id="widget_contact">
			<b>Próximos eventos</b>
		    {% for event in events %}
				<div style="background:url('/bundles/applicationanuncios/images/calendar.png') no-repeat left 17px;padding-left:35px;padding-top:15px">
					<a href="{{ path('event_show', { 'id': event.id, 'slug': event.slug }) }}">{{ event.title }}</a><br/>
					{{ event.getPrettyDate('%e %B') }}
				</div>
		    {% endfor %}
		</div>
	{% endif %}
	
	
{% endblock %}


{% block content %}



<style>
#btn_contact{font-size:13px;padding:4px 14px;width:100%;margin-bottom:15px}
.tabs > li > a{padding:0 10px}
</style>


<script>
var linkedin_user, dribbble_user, flickr_user, github_user, bitbucket_user, forrst_user, stackoverflow_user, youtube_user, vimeo_user, android_user, itunes_user, chrome_user, twitter_user, delicious_user, pinboard_user;
</script>


